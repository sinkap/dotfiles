{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate compile_commands.json",
      "type": "process",
      "command": "python",
      "args": [
          "${workspaceRoot}/.vscode/generate_compdb.py"
      ],
      "problemMatcher": []
    },
    {
      "label": "vm",
      "type": "shell",
      "command": "vm start",
      "presentation": {
        "echo": false,
        "clear": true,
        "group": "vm"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ],
      "group": "build"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "make -j`nproc`",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "group": "build"
      }
    }
  ]
}

